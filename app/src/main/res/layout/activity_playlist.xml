<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistActivity">

    <EditText
        android:id="@+id/inputSongEt"
        android:layout_width="245dp"
        android:layout_height="61dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Enter song name"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputArtistNameEt"
        android:layout_width="253dp"
        android:layout_height="62dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="96dp"
        android:ems="10"
        android:hint="Enter artist name"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputSongEt" />

    <EditText
        android:id="@+id/inputRatingEt"
        android:layout_width="239dp"
        android:layout_height="67dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Enter song rating (1-5)"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputArtistNameEt" />

    <EditText
        android:id="@+id/inputCommentEt"
        android:layout_width="216dp"
        android:layout_height="63dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="Enter song comments"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputRatingEt" />

    <Button
        android:id="@+id/AddToPlyBtn"
        android:layout_width="193dp"
        android:layout_height="66dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="109dp"
        android:text="Add to Playlist"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputCommentEt" />
</androidx.constraintlayout.widget.ConstraintLayout>